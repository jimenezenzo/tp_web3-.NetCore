@{
    Layout = "~/Views/Shared/_LayoutComensal.cshtml";
}

@model List<Servicios.Entidades.Evento>


    <div class="row">
        <div class="col">
            <div class="card shadow">
                <div class="card-header border-0">
                    <h3 class="mb-0">Eventos disponibles</h3>
                </div>
                <div class="container">
                    @if (Model.Count > 0)
                    {
                        <div class="row">
                            <div class="card-deck d-flex flex-wrap">
                                @foreach (var evento in Model)
                                {
                                    var rutaFoto = "~/assets/img/evento/" + (evento.Foto ?? "default.jpg");

                                    <div class="card bg-default mb-2">
                                        <img class="card-img-top" src="@rutaFoto" asp-append-version="true" alt="Card image cap">
                                        <div class="card-body">
                                            <h3 class="card-title text-uppercase text-muted mb-0">@evento.Nombre</h3>
                                            <p class="card-text text-white">
                                                Precio: $@evento.Precio <br />
                                                Ubicacion: @evento.Ubicacion <br />
                                                Fecha: @evento.Fecha <br />
                                                Disponibilidad: @evento.CantidadComensalesDisponibles personas
                                            </p>
                                            <a href="/comensales/@evento.IdEvento/reservar" class="btn btn-primary">Reservar</a>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning" role="alert">
                            No hay eventos disponibles
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
