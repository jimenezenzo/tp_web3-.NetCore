@{
    Layout = "~/Views/Shared/_LayoutComensal.cshtml";
}

@model _20212C_TP.Models.PuntuarViewModel

<div class="row justify-content-center mt-5">
    <div class="col-lg-6 col-md-8">
        @if (ViewBag.error != null)
        {
            <div class="alert alert-danger" role="alert">
                <strong>Error!</strong> @ViewBag.error
            </div>
        }

        <div class="card bg-secondary shadow border-0">
            <div class="card-body px-lg-5 py-lg-5">
                <div class="text-center text-muted mb-4">
                    <small>Complete con los datos</small>
                </div>
                <form role="form" asp-controller="Comensales" asp-action="Comentarios-calificacion" method="post">
                    <div class="form-group">
                        <div class="input-group input-group-alternative mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="ni ni-like-2"></i></span>
                            </div>
                            <input asp-for="Calificacion" class="form-control" placeholder="Ingrese una calificacion 1-5" min="1" max="5" value="@ViewBag.Calificacion.Calificacion"/>
                        </div>
                        <span asp-validation-for="Calificacion" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="input-group input-group-alternative mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="ni ni-air-baloon"></i></span>
                            </div>
                            <input asp-for="Comentarios" class="form-control" placeholder="Ingrese un comentario" value="@ViewBag.Calificacion.Comentarios"/>
                        </div>
                        <span asp-validation-for="Comentarios" class="text-danger"></span>
                    </div>

                    <input type="hidden" asp-for="IdEvento" class="form-control" value="@ViewBag.IdEvento">
                   

                    <div class="text-center">
                        <button type="submit" id="boton" class="btn btn-primary mt-4">cargar comentario</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>