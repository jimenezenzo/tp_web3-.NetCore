@{
    ViewData["Title"] = "Cocinando en casa";
}

<div class="row justify-content-start">

    @foreach (Servicios.Entidades.EventoCalificacion eventoFinalizado in ViewBag.EventosFinalizados)
    {
        <div class="col-md-3 col-lg-4 mb-2">
            <a class="card bg-secondary border-2 btn" href="/eventos/detalle?id=@eventoFinalizado.IdEvento">
                <div class="text-center d-flex justify-content-center align-items-center">
                    <img class="card-image-custom img-fluid img-thumbnail" src="~/assets/img/evento/@eventoFinalizado.Foto" alt="@eventoFinalizado.Foto" />
                </div>
                <div class="card-body m-0 p-0">
                    <div class="text-center text-muted">
                        <ul class="list-group">
                            <li class="list-group-item">$ @eventoFinalizado.Precio</li>
                            <li class="list-group-item">

                                @for (int i = 0; i < @eventoFinalizado.Calificacion; i++)
                                {
                                    <img src="/assets/img/star.png" />

                                }

                            </li>
                        </ul>
                    </div>
                </div>
            </a>
        </div>
    }
</div>